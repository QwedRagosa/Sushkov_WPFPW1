<Page x:Class="Sushkov_WPFPW1.Pages.Autho"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Sushkov_WPFPW1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Autho">

    <Grid>
        <StackPanel>
            <Button Name="Registerbtn" Content="Зарегистрироваться" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="20" Padding="10" Margin="20" Click="Registerbtn_Click"/>
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Width="450" Height="300" Margin="20">
                <TextBlock Text="Введите логин или Email:" FontSize="30" HorizontalAlignment="Center"/>
                <TextBox Name="Logintbx" Width="200" FontSize="15" Margin="10"/>
                <TextBlock Text="Введите пароль:" FontSize="30" HorizontalAlignment="Center"/>
                <TextBox Name="Passwordtbx" Width="200" FontSize="15" Margin="10"/>
                <Button Name="Enterbtn" Content="Войти" FontSize="30" Width="250" Margin="20" Click="Enterbtn_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
